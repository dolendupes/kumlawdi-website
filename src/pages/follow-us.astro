  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const followAllBtn = document.getElementById('follow-all-btn');
      const socialCards = document.querySelectorAll('.social-account-card');
      
      // Function to detect if app is installed and open app, fallback to web
      function openSocialLink(card) {
        const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
        const appUrl = card.dataset.appUrl;
        const webUrl = card.dataset.webUrl || card.href;
        
        if (isMobile && appUrl) {
          // Try to open native app first
          const appWindow = window.open(appUrl, '_blank', 'noopener,noreferrer');
          
          // Fallback to web if app doesn't open (after short delay)
          setTimeout(() => {
            if (!appWindow || appWindow.closed || typeof appWindow.closed === 'undefined') {
              window.open(webUrl, '_blank', 'noopener,noreferrer');
            }
          }, 500);
        } else {
          // Desktop: just open web URL
          window.open(webUrl, '_blank', 'noopener,noreferrer');
        }
      }
      
      // Update individual card clicks to use app links on mobile
      socialCards.forEach(card => {
        card.addEventListener('click', function(e) {
          // Let the default link behavior handle it, but enhance with app links
          const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
          const appUrl = card.dataset.appUrl;
          
          if (isMobile && appUrl) {
            e.preventDefault();
            openSocialLink(card);
          }
          // Otherwise, let default link behavior work
        });
      });
      
      // Collect all social media URLs (for Follow All button)
      const socialCardsArray = Array.from(socialCards);
      
      followAllBtn?.addEventListener('click', function() {
        // Check if mobile device
        const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
        
        if (isMobile) {
          // On mobile, try to open native apps
          if (confirm(`This will open ${socialCardsArray.length} social media pages. If you have the apps installed, they'll open directly. Continue?`)) {
            socialCardsArray.forEach((card, index) => {
              setTimeout(() => {
                openSocialLink(card);
              }, index * 400); // Longer delay to allow app switching
            });
          }
        } else {
          // Desktop: open all web URLs with delay
          socialCardsArray.forEach((card, index) => {
            setTimeout(() => {
              const webUrl = card.dataset.webUrl || card.href;
              window.open(webUrl, '_blank', 'noopener,noreferrer');
            }, index * 200);
          });
        }
        
        // Update button text temporarily
        const originalText = followAllBtn.innerHTML;
        followAllBtn.innerHTML = '<span>Opening accounts...</span>';
        followAllBtn.disabled = true;
        
        setTimeout(() => {
          followAllBtn.innerHTML = originalText;
          followAllBtn.disabled = false;
        }, socialCardsArray.length * (isMobile ? 400 : 200) + 500);
      });
    });
  </script>

